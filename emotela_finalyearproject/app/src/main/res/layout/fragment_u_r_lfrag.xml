<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".URLfrag">

    <EditText
        android:id="@+id/getURL"
        android:layout_width="344dp"
        android:layout_height="111dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"

        android:background="@drawable/rounded_shape"
        android:fontFamily="monospace"
        android:hint="Enter URL"
        android:inputType="textUri"
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/Twit"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="239dp" />

    <Button
        android:id="@+id/gettweet"
        android:layout_width="145dp"
        android:layout_height="46dp"
        android:layout_below="@+id/getURL"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/button_style"
        android:fontFamily="monospace"
        android:text="Analyze"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/showTweet"
        android:layout_width="405dp"
        android:layout_height="360dp"
        android:layout_below="@+id/gettweet"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/Twit"
        android:textSize="12sp" />

</RelativeLayout>